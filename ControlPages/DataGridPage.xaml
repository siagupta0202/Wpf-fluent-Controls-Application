<Page x:Class="WpfFluentControls.ControlPages.DataGridPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFluentControls.ControlPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Margin="10"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="DataGridPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Style="{DynamicResource TitleTextBlockStyle}" Text="DataGrid" Margin="0 0 0 10"/>
        <DataGrid Grid.Row="1" x:Name="dataGrid" Margin="10" />
    </Grid>
</Page>
