<Page x:Class="WpfFluentControls.ControlPages.GroupBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFluentControls.ControlPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupBoxPage">

    <Grid>
        <GroupBox Header="User Information" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Style="{StaticResource DefaultGroupBoxStyle}">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name:" />
                    <TextBox Name="NameTextBox" Width="200" Margin="10,0,0,20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Gender:" Margin="0,10,0,0"/>
                    <TextBox Name="GenderTextBox" Width="200" Margin="10,0,0,20"/>
                </StackPanel>

                <Button Content="Submit" Width="100" Margin="0,10,0,0" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
